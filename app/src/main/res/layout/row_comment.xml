<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/linearUserC"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:cardCornerRadius="20sp">

                <ImageView
                    android:id="@+id/userImgC"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/kakako" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/userIdC"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:text="드새우"
            android:textColor="#0E0E0E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userDateC"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="4"
            android:gravity="right"
            android:text="2021-10-29 15:25:11"
            android:textColor="#5C5C5C"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/deleteBtnC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete_black" />

    </LinearLayout>

    <TextView
        android:id="@+id/contentC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="댓글을 쓸거야!!!!!!!! 내가 왕이다!!!!!! 대왕님발~~~ 모트! 그만하도록!"
        android:textColor="#0E0E0E"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/dashLineComment"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layerType="software"
        android:src="@drawable/dash_line" />

</LinearLayout>